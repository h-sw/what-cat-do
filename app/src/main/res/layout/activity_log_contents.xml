<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".log.LogContentsActivity"
    android:orientation="vertical">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <TextView
                android:id="@+id/text_cont_date"
                android:layout_marginTop="12dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="12dp"
                android:gravity="left"
                android:text="2019년 5월 20일"
                android:textSize="24dp"
                android:textColor="#000"/>
            <TextView
                android:id="@+id/text_cont_time"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="12dp"
                android:gravity="left"
                android:text="오전 10시 21분"
                android:textSize="12dp"/>
            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="300dp"
                android:layout_margin="20dp"
                android:background="#fff"
                app:cardElevation="20dp">
                <ImageView
                    android:id="@+id/img_cont"
                    android:layout_width="match_parent"
                    android:layout_height="300dp"
                    android:layout_margin="20dp"
                    android:src="@null"/>
            </android.support.v7.widget.CardView>
            <TextView
                android:id="@+id/text_cont_comment"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="it is comment!!"
                android:layout_marginVertical="12dp"
                android:textColor="#000"
                android:textSize="20sp"/>
            <TextView
                android:layout_marginTop="12dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="12dp"
                android:gravity="left"
                android:text="상세 정보"
                android:textSize="24dp"
                android:textColor="#000"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="12dp"
                android:gravity="left"
                android:text="감정 분석 결과"
                android:textSize="20sp"
                android:textColor="#80000000"/>
            <TextView
                android:id="@+id/text_cont_emotion1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="happy - 98.0323%"
                android:layout_marginHorizontal="24dp"
                android:textColor="#000"
                android:textSize="20sp"/>
            <TextView
                android:id="@+id/text_cont_emotion2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Scared- 0.733%"
                android:layout_marginHorizontal="24dp"
                android:textColor="#000"
                android:textSize="20sp"/>
            <TextView
                android:id="@+id/text_cont_emotion3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="sad - 0.013%"
                android:layout_marginHorizontal="24dp"
                android:textColor="#000"
                android:textSize="20sp"/>
        </LinearLayout>
    </ScrollView>



</LinearLayout>