<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".log.LogContentsActivity"
    android:orientation="vertical">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <TextView
                android:id="@+id/text_cont_date"
                android:layout_marginTop="12dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="12dp"
                android:gravity="left"
                android:text="2019년 5월 20일"
                android:textSize="24dp"
                android:textColor="@color/PrimaryDark"/>
            <TextView
                android:id="@+id/text_cont_time"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="12dp"
                android:gravity="left"
                android:textColor="#000"
                android:text="오전 10시 21분"
                android:textSize="16dp"/>
            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="312dp"
                android:layout_margin="20dp"
                android:backgroundTint="@color/PrimaryDark"
                app:cardElevation="20dp">

                <ImageView
                    android:id="@+id/img_cont"
                    android:layout_width="match_parent"
                    android:layout_height="300dp"
                    android:background="#FFF"
                    android:layout_margin="6dp"
                    android:src="@null" />
            </android.support.v7.widget.CardView>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="comment"
                android:gravity="center"
                android:textSize="12sp"/>
            <TextView
                android:id="@+id/text_cont_comment"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="코멘트가 없습니다."
                android:layout_marginBottom="12dp"
                android:textColor="@color/Primary"
                android:textSize="20sp"/>
            <TextView
                android:layout_marginTop="12dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="12dp"
                android:gravity="left"
                android:text="상세 정보"
                android:textSize="24sp"
                android:textColor="@color/PrimaryDark"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="12dp"
                android:gravity="left"
                android:text="감정 분석 결과"
                android:textSize="16sp"
                android:textColor="#80000000"/>
            <TextView
                android:id="@+id/text_cont_emotion"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text=""
                android:layout_marginHorizontal="24dp"
                android:textColor="#000"
                android:textSize="20sp"/>
            <Button
                android:id="@+id/btn_delete"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginVertical="24dp"
                android:layout_marginHorizontal="30dp"
                android:elevation="10dp"
                android:textColor="#FFF"
                android:text="삭제하기"
                android:textStyle="bold"
                android:background="@color/PrimaryDark"/>
        </LinearLayout>
    </ScrollView>



</LinearLayout>